From: junsungc <junsungc@gooroom.kr>
Date: Thu, 5 Sep 2019 11:22:00 +0900
Subject: [PATCH 22/78] Change gooroom-browser extensions path & config path

---
 chrome/common/chrome_paths.cc       | 8 ++++++++
 chrome/common/chrome_paths_linux.cc | 2 ++
 2 files changed, 10 insertions(+)

diff --git a/chrome/common/chrome_paths.cc b/chrome/common/chrome_paths.cc
index b3cff585b1e4..905b246ec8c7 100644
--- a/chrome/common/chrome_paths.cc
+++ b/chrome/common/chrome_paths.cc
@@ -57,9 +57,17 @@ const base::FilePath::CharType kPepperFlashSystemBaseDirectory[] =
 // /usr/share seems like a good choice, see: http://www.pathname.com/fhs/
 const base::FilePath::CharType kFilepathSinglePrefExtensions[] =
 #if defined(GOOGLE_CHROME_BUILD)
+#if !defined(GOOROOM_BUILD)
     FILE_PATH_LITERAL("/usr/share/google-chrome/extensions");
 #else
+    FILE_PATH_LITERAL("/usr/share/gooroom/browser/extensions");
+#endif  // defined(GOOROOM_BUILD)
+#else
+#if !defined(GOOROOM_BUILD)
     FILE_PATH_LITERAL("/usr/share/chromium/extensions");
+#else
+    FILE_PATH_LITERAL("/usr/share/gooroom/browser/extensions");
+#endif  // defined(GOOROOM_BUILD)
 #endif  // defined(GOOGLE_CHROME_BUILD)
 
 // The path to the hint file that tells the pepper plugin loader
diff --git a/chrome/common/chrome_paths_linux.cc b/chrome/common/chrome_paths_linux.cc
index 5659ef5d6f97..41097cd40990 100644
--- a/chrome/common/chrome_paths_linux.cc
+++ b/chrome/common/chrome_paths_linux.cc
@@ -89,6 +89,8 @@ bool GetDefaultUserDataDirectory(base::FilePath* result) {
 
 #if defined(GOOGLE_CHROME_BUILD)
   *result = config_dir.Append("google-chrome" + GetChannelSuffixForDataDir());
+#elseif defined(GOOROOM_BUILD)
+  *result = config_dir.Append("gooroom");
 #else
   *result = config_dir.Append("chromium");
 #endif
